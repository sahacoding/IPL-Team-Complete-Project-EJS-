<% layout('layouts/boilerplate') %> 
    
<div class="row">
        <h1 class="text-center">Edit Player</h1>
           <div class="col-6 offset-3">
              <form action="/member/<%= editPlayerlist._id %>?_method=PUT" method="POST" novalidate>
                   <div class = 'mb-3'>
                     <label class="form-label" for="name">Player Name:</label>
                     <input class="form-control" type="text" id="name" name="name" value="<%=  editPlayerlist.name %>" required>
                   </div>
    
                     <div class = 'mb-3'>
                      <label class="form-label" for="img">Image Url:</label>
                      <input class="form-control" type="text" id="img" name="img" value="<%=  editPlayerlist.img %>" required>
                    </div>
    
                   <div class = 'mb-3'>
                    <label class="form-label" for="age">Age:</label>
                    <input class="form-control" type="number" id="age" name="age" value="<%=editPlayerlist.age %>" required>
                   </div>
    
                   <div class = 'mb-3'>
                    <label class="form-label" for="country">Player Country:</label>
                    <input class="form-control" type="text" id="country" name="country" value="<%= editPlayerlist.country %>" required>
                  </div>

                  <div class="mb-3">
                    <label for="category">Select category</label>
        <select name="category" id="category">
            <option value="batsman">Batsman</option>
            <option value="bowler">Bowler</option>
            <option value="wk">WK</option>
            <option value="allrounder">Allrounder</option>
        </select>
                  </div>
    
                  <div class="mb-3">
                    <button class="btn btn-success">Update</button>
                  </div>
                </form>
                <a href="/member/<%= editPlayerlist._id %> ">Cancel</a>
          </div>
    </div>     
    
    
   
  
    

