<% layout('layouts/boilerplate') %> 
  
 <h1 class="text-center">Players Name</h1>
    
<ul>
        <div class="col-6 offset-3">
            <% for(let p of findPlayer){ %> 
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= p.img %> " alt="...">
                    </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <li><a href="/member/<%= p._id %>"><%= p.name %></a>(<%= p.country %>)</li>
                    </div>
                </div>
            </div>
            </div>
            <% } %> 
        </div>
    </ul>
    <br>
    <a href="/teamlist">Back to All Team List</a>




